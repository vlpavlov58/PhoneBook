@model List<PhoneBook.Models.DataModels.Group>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Groups</h2>


@if (Model != null)
{
    <table>
        <tr>
            <th>Name</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var group in Model)
        {
            <tr>
                <td>@group.GroupName</td>
                <td>@Html.ActionLink("Edit", "Update", 
                   routeValues: new{ id= group.Id})</td>
                <td><a href="">Delete</a></td>
            </tr>
        }
    </table>
}

@Html.ActionLink("New Group", "Add", "Groups");